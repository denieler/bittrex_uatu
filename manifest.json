{
	"name": "Bittrex_uatu",
	"description": "Chrome extension to notify you about any change in Bittrex immediately",
	"version": "0.2",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_title": "Bittrex Uatu",
        "default_popup": "src/popup/index.html"
    },
	"permissions": [
		"nativeMessaging",
		"tabs",
		"notifications",
		"storage",
		"http://*/",
        "https://*/"
	],
	"background": {
		"scripts": ["dist/background.js"]
	},
	"web_accessible_resources": [
		"images/icon.png"
	]
}